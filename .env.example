APP_ENV="development"
APP_PORT="8080"

# For Dokploy: set DOMAIN (e.g. api.yourdomain.com) for Traefik
# DOMAIN=api.yourdomain.com

DATABASE_PORT="5432"
DATABASE_HOST="localhost"
DATABASE_USER=""
DATABASE_PASSWORD=""
DATABASE_NAME=""
DATABASE_MAX_OPEN_CONNECTIONS=10
DATABASE_MAX_IDLE_CONNECTIONS=10

# Redis for price cache (leave REDIS_HOST empty to use in-memory cache)
REDIS_HOST=
REDIS_PORT=6379
REDIS_USERNAME=
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL_PRICE=60

JWT_SECRET="secret"
JWT_EXPIRATION_TIME="1h"
JWT_REFRESH_SECRET="refresh_secret"
JWT_REFRESH_EXPIRATION_TIME="1h"

CRYPTO_PRICE_API=https://pro-api.coinmarketcap.com
CRYPTO_PRICE_API_KEY=your_coinmarketcap_api_key
STOCK_PRICE_API=https://query1.finance.yahoo.com

BCRYPT_SALT_ROUNDS=8

RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=1000

# CORS: * or comma-separated origins, e.g. https://app.example.com
CORS_ALLOWED_ORIGINS=*

LOG_LEVEL=debug