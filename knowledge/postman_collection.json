    {
      "name": "Prices",
      "item": [
        {"name": "Crypto BTC/USD", "request": {"method": "GET", "header": [], "url": {"raw": "{{baseUrl}}/prices/crypto/BTC", "host": ["{{baseUrl}}"], "path": ["prices", "crypto", "BTC"]}}},
