{
  "info": {
    "name": "Finance Tracker API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {"key": "baseUrl", "value": "http://localhost:8080/api/v1", "type": "string"},
    {"key": "authToken", "value": "", "type": "string"},
    {"key": "assetUuid", "value": "", "type": "string"},
    {"key": "expenseUuid", "value": "", "type": "string"},
    {"key": "incomeUuid", "value": "", "type": "string"},
    {"key": "savingGoalUuid", "value": "", "type": "string"}
  ],
  "item": [
    {
      "name": "Health",
      "item": [
        {"name": "Health Check", "request": {"method": "GET", "header": [], "url": {"raw": "http://localhost:8080/health", "host": ["http://localhost:8080"], "path": ["health"]}}}
      ]
    },
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "event": [{"listen": "test", "script": {"exec": ["if (pm.response.code === 201) { var json = pm.response.json(); if (json.data && json.data.Token) { pm.collectionVariables.set('authToken', json.data.Token); }}"], "type": "text/javascript"}}],
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {"mode": "raw", "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"securepassword123\",\n  \"name\": \"John Doe\"\n}"},
            "url": {"raw": "{{baseUrl}}/auth/register", "host": ["{{baseUrl}}"], "path": ["auth", "register"]}
          }
        },
        {
          "name": "Login",
          "event": [{"listen": "test", "script": {"exec": ["if (pm.response.code === 200) { var json = pm.response.json(); if (json.data && json.data.Token) { pm.collectionVariables.set('authToken', json.data.Token); }}"], "type": "text/javascript"}}],
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {"mode": "raw", "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"securepassword123\"\n}"},
            "url": {"raw": "{{baseUrl}}/auth/login", "host": ["{{baseUrl}}"], "path": ["auth", "login"]}
          }
        }
      ]
    },
    {
      "name": "Assets",
      "item": [
        {
          "name": "Create",
          "event": [{"listen": "test", "script": {"exec": ["if (pm.response.code === 201) { var json = pm.response.json(); if (json.data && json.data.uuid) { pm.collectionVariables.set('assetUuid', json.data.uuid); }}"], "type": "text/javascript"}}],
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}, {"key": "Authorization", "value": "Bearer {{authToken}}"}],
            "body": {"mode": "raw", "raw": "{\n  \"name\": \"Bitcoin\",\n  \"type\": \"CRYPTO\",\n  \"quantity\": 0.5,\n  \"symbol\": \"BTC\"\n}"},
            "url": {"raw": "{{baseUrl}}/assets", "host": ["{{baseUrl}}"], "path": ["assets"]}
          }
        },
        {"name": "List", "request": {"method": "GET", "header": [{"key": "Authorization", "value": "Bearer {{authToken}}"}], "url": {"raw": "{{baseUrl}}/assets", "host": ["{{baseUrl}}"], "path": ["assets"]}}},
        {"name": "Get", "request": {"method": "GET", "header": [{"key": "Authorization", "value": "Bearer {{authToken}}"}], "url": {"raw": "{{baseUrl}}/assets/{{assetUuid}}", "host": ["{{baseUrl}}"], "path": ["assets", "{{assetUuid}}"]}}},
        {"name": "Update", "request": {"method": "PUT", "header": [{"key": "Content-Type", "value": "application/json"}, {"key": "Authorization", "value": "Bearer {{authToken}}"}], "body": {"mode": "raw", "raw": "{\n  \"quantity\": 0.75\n}"}, "url": {"raw": "{{baseUrl}}/assets/{{assetUuid}}", "host": ["{{baseUrl}}"], "path": ["assets", "{{assetUuid}}"]}}},
        {"name": "Delete", "request": {"method": "DELETE", "header": [{"key": "Authorization", "value": "Bearer {{authToken}}"}], "url": {"raw": "{{baseUrl}}/assets/{{assetUuid}}", "host": ["{{baseUrl}}"], "path": ["assets", "{{assetUuid}}"]}}},
        {"name": "Get Price History", "request": {"method": "GET", "header": [{"key": "Authorization", "value": "Bearer {{authToken}}"}], "url": {"raw": "{{baseUrl}}/assets/{{assetUuid}}/prices?limit=30", "host": ["{{baseUrl}}"], "path": ["assets", "{{assetUuid}}", "prices"], "query": [{"key": "limit", "value": "30"}]}}},
        {"name": "Record Price", "request": {"method": "POST", "header": [{"key": "Content-Type", "value": "application/json"}, {"key": "Authorization", "value": "Bearer {{authToken}}"}], "body": {"mode": "raw", "raw": "{\n  \"price\": 42000.50,\n  \"source\": \"manual\",\n  \"recordedAt\": \"2026-02-01T12:00:00Z\"\n}"}, "url": {"raw": "{{baseUrl}}/assets/{{assetUuid}}/prices", "host": ["{{baseUrl}}"], "path": ["assets", "{{assetUuid}}", "prices"]}}},
        {"name": "Fetch Price", "request": {"method": "POST", "header": [{"key": "Authorization", "value": "Bearer {{authToken}}"}], "url": {"raw": "{{baseUrl}}/assets/{{assetUuid}}/prices/fetch", "host": ["{{baseUrl}}"], "path": ["assets", "{{assetUuid}}", "prices", "fetch"]}}}
      ]
    },
